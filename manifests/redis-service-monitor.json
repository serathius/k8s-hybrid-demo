{
  "apiVersion": "monitoring.coreos.com/v1",
  "kind": "ServiceMonitor",
  "metadata": {
    "name": "redis",
    "labels": {
      "k8s-app": "redis"
    },
    "namespace": "monitoring"
  },
  "spec": {
    "selector": {
      "matchLabels": {
        "app": "redis"
      }
    },
    "endpoints": [
      {
        "port": "metrics",
        "interval": "10s"
      }
    ],
    "namespaceSelector": {
      "matchNames": [
        "default"
      ]
    }
  }
}